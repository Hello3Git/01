local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- âœ… Only create once
if not playerGui:FindFirstChild("GeneratorButtonGui") then
    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "GeneratorButtonGui"
    screenGui.Parent = playerGui

    local button = Instance.new("TextButton")
    button.Size = UDim2.new(0, 150, 0, 50)
    button.Position = UDim2.new(0.5, -75, 0.8, -25)
    button.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.Text = "Do Generators"
    button.Active = true
    button.Draggable = true
    button.Parent = screenGui

    button.MouseButton1Click:Connect(function()
        workspace:WaitForChild("Map"):WaitForChild("Ingame"):WaitForChild("Map"):WaitForChild("Generator"):WaitForChild("Remotes"):WaitForChild("RE"):FireServer()
    end)
end
